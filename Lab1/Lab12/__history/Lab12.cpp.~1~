//---------------------------------------------------------------------------

#include <vcl.h>
#include <dos.h>
#include <stdio.h>
#pragma hdrstop

#include "Lab12.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
struct date d;
struct time t;

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	Timer1->Enabled=false;
	Timer2->Enabled=false;
	b1->Enabled=true;
	b2->Enabled=false;
	b3->Enabled=false;

	getdate(&d);
	gettime(&t);
	char buf[40];

	//snprintf(buf,d.da_day,d.da_mon,d.da_year,t.ti_hour,t.ti_min,t.ti_sec,"%02s-%02s-%4s %02s:%02s:%02s");
	 int aa = 0;
	 aa = d.da_day;
	Edit1->Text=aa;


}
//---------------------------------------------------------------------------
void __fastcall TForm1::b1Click(TObject *Sender)
{
	b1->Enabled=false;
	b2->Enabled=true;
	b3->Enabled=false;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::b2Click(TObject *Sender)
{
	b1->Enabled=false;
	b2->Enabled=false;
	b3->Enabled=true;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::ExitClick(TObject *Sender)
{
	Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::b3Click(TObject *Sender)
{
	b1->Enabled=true;
	b2->Enabled=false;
	b3->Enabled=false;
}
//---------------------------------------------------------------------------
