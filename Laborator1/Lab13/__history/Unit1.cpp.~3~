//---------------------------------------------------------------------------

#include <vcl.h>
#include <dos.h>
#include <stdio.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
int x = 0;
int i = 0;
struct date d;
struct time t;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	Timer1->Enabled=true;
	Timer2->Enabled=false;
	getdate(&d);
	gettime(&t);
	char buf[40];

	snprintf ( buf, 40, "%d-%d-%d %d:%d:%d", d.da_day,d.da_mon,d.da_year,t.ti_hour,t.ti_min,t.ti_sec);
	Edit1->Text=(AnsiString)buf;

	Start->Enabled=true;
	Stop->Enabled=false;

	PaintBox1->Canvas->MoveTo(0,60);
	//x1 = 60;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Timer1Timer(TObject *Sender)
{

	getdate(&d);
	gettime(&t);
	char buff[40];

	snprintf ( buff, 40, "%d-%d-%d %d:%d:%d", d.da_day,d.da_mon,d.da_year,t.ti_hour,t.ti_min,t.ti_sec);
	Edit1->Text=(AnsiString)buff;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::ExitClick(TObject *Sender)
{
	Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::StartClick(TObject *Sender)
{
	Start->Enabled=false;
	Stop->Enabled=true;
	Timer2->Enabled=true;
	//PaintBox1->Clear();
	PaintBox1->Canvas->Pen->Color=clRed;
	x = 0;
	i = 0;
	PaintBox1->Canvas->MoveTo(0,60);
	Panel2->Height=60;

   /*
Brush->Color = clNone; // или нужный цвет
Brush->Style = bsClear; // и bsSolid

PaintBox1->Repaint();    */
PaintBox1->Canvas->FloodFill(50,50,clBtnFace,fsBorder);


	//PaintBox1->Canvas->LineTo(10,70);
}
//---------------------------------------------------------------------------
void __fastcall TForm1::StopClick(TObject *Sender)
{
	Start->Enabled=true;
	Stop->Enabled=false;
	Timer2->Enabled=false;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Timer2Timer(TObject *Sender)
{
   x = rand()%100;
   i = i++;
   //Label1->Caption=x;
   PaintBox1->Canvas->LineTo(i,x);

   Panel2->Height=x;


   if(i==129){
   	Start->Enabled=true;
	Stop->Enabled=false;
	Timer2->Enabled=false;
	Timer2->Tag = 0;

	i = 0;
	x = 0;
	//Timer2->Tag=0;




   }

}
//---------------------------------------------------------------------------

